<%= form_for(@user, html: { multipart: true}, class: "user-form") do |form| %>
  <div class="row">
    <div class="large-4 columns end">
      <%= form.label :full_name, class: "right inline"%>
      <%= form.text_field :full_name %>
    </div>
  </div>
  <div class = "row" >
    <div class="large-4 columns">
      <%= form.label :level %>
      <%= form.select :level,
        ["Beginner", "Jr. Developer", "Mid Developer", "Sr. Developer"],
        class: "skill-level" %>
    </div>
  </div>
  <div class="row">
    <%= form.submit "Submit" %>
  </div>
<% end %>
